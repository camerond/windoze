!!!
%html
  %head
    %title Windoze
    %script(type="text/javascript" src="/javascripts/jquery.min.js")
    %script(type="text/javascript" src="/javascripts/jquery.windoze.js")
    %link(rel="stylesheet" href="/stylesheets/jquery.windoze.css" type="text/css")
    :javascript
      $(document).ready(function() {
        $('a.trigger').windoze({
          container: '#modal.one',
          beforeShow: function() {
            this.$modal.find('a').windoze({
              init_shown: true,
              container: '#modal.two'
            });
          }
        });
        $('body').windoze({
          delegate: '#modal.two a',
          container: '#modal.one'
        });
      });
  %body
    = yield
